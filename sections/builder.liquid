{% for block in section.blocks %}

  {% if block.type == 'banner' %}
    {% include 'banner.builder.liquid', {
      id: block.id
      height: block.settings.height
      padding_x: block.settings.padding_x
      padding_y: block.settings.padding_y
      margin_top: block.settings.margin_top
      margin_bottom: block.settings.margin_bottom
      background: block.settings.background
      background_position: block.settings.background_position
      background_size: block.settings.background_size
      background_repeat: block.settings.background_repeat
      background_mobile: block.settings.background_mobile
    }%}
  {% endif %}

  {% if block.type == 'grid' %}
    {% include 'grid.builder.liquid', {
      id: block.id
      section_padding_top: block.settings.section_padding_top
      section_padding_bottom: block.settings.section_padding_bottom

      collection_select: block.settings.collection_select
      limit_product: block.settings.limit_product

      grid_template: block.settings.grid_template
      grid_max_column_size: '75%';

      show_title: block.settings.show_title
      show_button: block.settings.show_button
      show_price: block.settings.show_price

      background: block.settings.background
      background_position: block.settings.background_position
      background_size: block.settings.background_size
      background_repeat: block.settings.background_repeat
      background_mobile: block.settings.background_mobile

      header_title: block.settings.header_title
      header_font_size: block.settings.header_font_size
      header_font_family: block.settings.header_font_family
      header_text_transform: block.settings.header_text_transform
      header_margin_top: block.settings.header_margin_top
      header_margin_bottom: block.settings.header_margin_bottom
      header_color: block.settings.header_color
      header_font_weight: block.settings.header_font_weight

      title_font_size: block.settings.title_font_size
      title_font_family: block.settings.title_font_family
      title_text_transform: block.settings.title_text_transform
      title_margin_top: block.settings.title_margin_top
      title_margin_bottom: block.settings.title_margin_bottom
      title_color: block.settings.title_color
      title_font_weight: block.settings.title_font_weight
      title_text_align: block.settings.title_text_align

      button_title: block.settings.button_title
