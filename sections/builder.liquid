{% for block in section.blocks %}

  {% if block.type == 'banner' %}
    {% include 'banner.builder.liquid', {
      id: block.id
      height: block.settings.height
      padding_x: block.settings.padding_x
      padding_y: block.settings.padding_y
      margin_top: block.settings.margin_top
      margin_bottom: block.settings.margin_bottom
      background: block.settings.background
      background_position: block.settings.background_position
      background_size: block.settings.background_size
      background_repeat: block.settings.background_repeat
      background_mobile: block.settings.background_mobile
    }%}
  {% endif %}

{% endfor %}



{% schema %}
{
  "name": "Builder",
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "range",
          "id": "height",
          "label": "Height",
          "unit": "px",
          "min": 0,
          "max": 1000,
          "step": 20,
          "default": 300
        },
        {
          "type": "range",
          "id": "padding_y",
          "label": "Padding - Top / Bottom",
          "unit": "px",
          "min": 0,
          "max": 250,
          "step": 5,
          "default": 0
        },
        {
          "type": "range",
          "id": "padding_x",
          "label": "Padding - Right / Left",
          "unit": "px",
          "min": 0,
          "max": 250,
          "step": 5,
          "default": 0
        },
        {
          "type": "range",
          "id": "margin_top",
          "label": "Margin - Top",
          "unit": "px",
          "min": 0,
          "max": 250,
          "step": 5,
          "default": 0
        },
        {
          "type": "range",
          "id": "margin_bottom",
          "label": "Margin - Bottom",
          "unit": "px",
          "min": 0,
          "max": 250,
          "step": 5,
          "default": 0
        },
        {
          "type": "image_picker",
          "id": "background",
          "label": "Background"
        },
        {
          "type": "select",
          "id": "background_position",
          "label": "Background Position",
          "default": "center center",
          "options": [
            {
              "value": "left top",
              "label": "Left Top"
            },
            {
              "value": "left center",
              "label": "Left Center"
            },
            {
              "value": "left bottom",
              "label": "Left Bottom"
            },
            {
              "value": "right top",
              "label": "Right Top"
            },
            {
              "value": "right center",
              "label": "Right Center"
            },
            {
              "value": "right bottom",
              "label": "Right Bottom"
            },
            {
              "value": "center top",
              "label": "Center Top"
            },
            {
              "value": "center center",
              "label": "Center Center"
            },
            {
              "value": "center bottom",
              "label": "Center Bottom"
            }
          ]
        },
        {
          "type": "select",
          "id": "background_size",
          "label": "Background Size",
          "default": "auto",
          "options": [
            {
              "value": "auto",
              "label": "Auto"
            },
            {
              "value": "contain",
              "label": "Contain"
            },
            {
              "value": "cover",
              "label": "Cover"
            }
          ]
        },
        {
          "type": "select",
          "id": "background_repeat",
          "label": "Background Repeat",
          "options": [
            {
              "value": "no-repeat",
              "label": "No repeat"
            },
            {
              "value": "repeat",
              "label": "Repeat"
            }
          ]
        },
        {
          "type": "image_picker",
          "id": "background_mobile",
          "label": "Background (Responsive)"
        }
      ]
    }
  ]
}
{% endschema %}